<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_order_more"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_black_1a"
            android:textSize="16sp"
            android:text="我的订单"/>

        <TextView
            android:id="@+id/iv_to_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:background="@mipmap/icon_to_right_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:layout_toLeftOf="@id/iv_to_right"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24.5dp"
        android:layout_marginRight="24.5dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wait_payment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_my_payment"
            android:textSize="12sp"
            android:gravity="center"
            android:text="待付款"/>
        <TextView
            android:id="@+id/tv_wait_consult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_my_discuss"
            android:textSize="12sp"
            android:gravity="center"
            android:text="待协商"/>
        <TextView
            android:id="@+id/tv_wait_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_my_confirm"
            android:textSize="12sp"
            android:gravity="center"
            android:text="待确认"/>
        <TextView
            android:id="@+id/tv_wait_evaluate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_my_evaluation"
            android:textSize="12sp"
            android:gravity="center"
            android:text="待评价"/>
    </LinearLayout>

</LinearLayout>