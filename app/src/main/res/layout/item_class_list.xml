<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高三物理成绩提高班"
        android:textSize="14sp"
        android:textColor="@color/color_3A3A3A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/tv_class_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:text="已上架"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_BBBBBB"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_class_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_class_name"/>

    <View style="@style/setting_divider"
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_class_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/tv_class_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程编号：34982392390"
        android:textSize="14sp"
        android:textColor="@color/color_7a7a7a"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/tv_class_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:text="上课区域：广东省/广州市/全城"
        android:textSize="14sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_class_sign"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tv_shelf_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:text="上架有效期：2019-05-23 至 2020-03-23"
        android:textSize="14sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_class_area"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tv_class_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
            tools:text="总课时：48小时 / 学习人数：5人"
        android:textSize="14sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shelf_life"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tv_class_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:text="单价：200元 / 总价：4800元"
        android:textSize="14sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_class_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <View style="@style/setting_divider"
        android:id="@+id/divider_two"
        app:layout_constraintTop_toBottomOf="@id/tv_class_price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/tv_class_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程管理"
        android:textSize="14sp"
        android:textColor="@color/color_3A3A3A"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_two"/>

    <TextView
        android:id="@+id/tv_one_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="15dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_class_management"
        app:layout_constraintBottom_toBottomOf="@id/tv_class_management"/>

    <TextView
        android:id="@+id/tv_two_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换区域"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintRight_toLeftOf="@id/tv_one_btn"
        app:layout_constraintTop_toTopOf="@id/tv_class_management"
        app:layout_constraintBottom_toBottomOf="@id/tv_class_management"/>
    <TextView
        android:id="@+id/tv_three_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上架"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintRight_toLeftOf="@id/tv_two_btn"
        app:layout_constraintTop_toTopOf="@id/tv_class_management"
        app:layout_constraintBottom_toBottomOf="@id/tv_class_management"/>
    <TextView
        android:id="@+id/tv_four_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintRight_toLeftOf="@id/tv_three_btn"
        app:layout_constraintTop_toTopOf="@id/tv_class_management"
        app:layout_constraintBottom_toBottomOf="@id/tv_class_management"/>


    <View style="@style/setting_divider"
        android:id="@+id/divider_three"
        app:layout_constraintTop_toBottomOf="@id/tv_class_management"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/tv_service_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务包"
        android:textSize="14sp"
        android:textColor="@color/color_3A3A3A"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_three"/>

    <TextView
        android:id="@+id/tv_five_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已购"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="15dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_service_pack"
        app:layout_constraintBottom_toBottomOf="@id/tv_service_pack"/>

    <TextView
        android:id="@+id/tv_six_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="续费"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintRight_toLeftOf="@id/tv_five_btn"
        app:layout_constraintTop_toTopOf="@id/tv_service_pack"
        app:layout_constraintBottom_toBottomOf="@id/tv_service_pack"/>
    <TextView
        android:id="@+id/tv_seven_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买"
        android:textColor="@color/color_CD2A2A"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:background="@drawable/shape_red_out_width_coner25"
        app:layout_constraintRight_toLeftOf="@id/tv_six_btn"
        app:layout_constraintTop_toTopOf="@id/tv_service_pack"
        app:layout_constraintBottom_toBottomOf="@id/tv_service_pack"/>

</androidx.constraintlayout.widget.ConstraintLayout>