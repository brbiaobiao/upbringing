<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:background="@color/cl_ffffff"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:text="手机"
                android:textColor="#3a3a3a"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_phone"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textColorHint="#9a9a9a"
                android:hint="请输入手机号码"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone">

            <TextView
                android:layout_alignParentLeft="true"
                android:text="验证码"
                android:textColor="#3a3a3a"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_marginLeft="80dp"
                android:inputType="number"
                android:id="@+id/et_login_code"
                android:background="@null"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp"
                android:textColor="#1A1A1A"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_verification_code"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="获取验证码"
                android:textColor="#0AA0FE"
                android:textSize="14sp" />



        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="#E6E6E6"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:text="原密码"
                android:textColor="#3a3a3a"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_password_one"
                android:maxLength="15"
                android:textColor="#1A1A1A"
                android:inputType="number"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="14sp"
                android:textColorHint="#9a9a9a"
                android:hint="请输入原密码"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:text="密码"
                android:textColor="#3a3a3a"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_password_two"
                android:maxLength="11"
                android:textColor="#1A1A1A"
                android:inputType="number"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="14sp"
                android:textColorHint="#9a9a9a"
                android:hint="请设置新密码，长度6～15位之间"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6"/>

    </LinearLayout>


    <TextView
        android:layout_below="@+id/ll_input"
        android:id="@+id/tv_register"
        android:background="@drawable/select_button_login"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:gravity="center"
        android:text="修改登录密码"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="325dp"
        android:layout_height="50dp"/>



    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即代表同意"
            android:textColor="#3a3a3a"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="#0AA0FE"
            android:textSize="12sp"
            />

    </LinearLayout>




</RelativeLayout>