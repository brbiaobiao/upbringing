<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@drawable/sp_def_dialog_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:id="@+id/tv_title"
              tools:text="标题"
              tools:visibility="visible"
              android:visibility="gone"
              android:padding="@dimen/qb_px_20"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:gravity="center"
              android:layout_height="wrap_content"/>

    <View style="@style/divider_default"
          android:visibility="gone"
          android:id="@+id/view_title_divider"
    />

    <FrameLayout android:layout_width="match_parent"
                 android:id="@+id/container"
                 android:layout_height="wrap_content"/>

    <View style="@style/divider_default"
          android:id="@+id/view_divider"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/ll_btns"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="确定"
                  android:textColor="@color/text_black"
                  android:gravity="center"
                  android:textSize="@dimen/sp_14"
                  android:padding="@dimen/qb_px_20"
                  android:id="@+id/tv_pos_btn"
                  android:layout_height="wrap_content"/>

        <View style="@style/divider_default"
              android:id="@+id/view_lldivider"
              android:layout_height="match_parent"
              android:layout_width="1px"
        />

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="取消"
                  android:textColor="@color/text_black"
                  android:textSize="@dimen/sp_14"
                  android:gravity="center"
                  android:padding="@dimen/qb_px_20"
                  android:id="@+id/tv_neg_btn"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>