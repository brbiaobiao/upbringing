<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程类目"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                style="@style/setting_title_text"
                android:gravity="left"
                android:text="请选择课程类目" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程类型"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                style="@style/setting_title_text"
                android:gravity="left"
                android:text="开班教学/辅导课" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名称"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:background="@null"
                android:hint="请输入课程名称，50字以内"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程亮点"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:background="@null"
                android:hint="请输入课程亮点，30字以内"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_leaner_red"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:id="@+id/tv_leaner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_leaner_red"
                android:text="上课人数"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_leaner_else"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:layout_toRightOf="@id/tv_leaner"
                android:text="一对"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_leaner_else"
                android:background="@null"
                android:hint="请输入"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/qb_px_30"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="人"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授课对象"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:background="@null"
                android:hint="请填写授课对象，20字以内"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课时时长"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                style="@style/setting_title_text"
                android:gravity="left"
                android:text="请选择课时时长" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总课时"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:background="@null"
                android:hint="请输入总课时"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unit_price_red"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:id="@+id/tv_unit_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_unit_price_red"
                android:text="课时单价"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_unit_else"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:layout_toRightOf="@id/tv_unit_price_tip"
                android:text="每课时"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_unit_else"
                android:background="@null"
                android:hint="请输入"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/qb_px_30"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="元"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_total_price_red"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_total_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_total_price_red"
                android:text="课时总价"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_total_price_tip"
                android:background="@null"
                android:hint="请输入"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/qb_px_30"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="元"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_original_price_red"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_original_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_original_price_red"
                android:text="课时原价"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_original_price_tip"
                android:background="@null"
                android:hint="请输入"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/qb_px_30"
                android:textColor="#1A1A1A"
                android:textColorHint="#9a9a9a"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="元"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_teach_type_red"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:id="@+id/tv_teach_type_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_30"
                android:layout_marginBottom="@dimen/qb_px_30"
                android:layout_toRightOf="@id/tv_teach_type_red"
                android:text="授课方式"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学员上门"
                android:textColor="@color/color_3A3A3A"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>
            <CheckBox
                android:id="@+id/cb_college"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_check_box_green"
                android:layout_toLeftOf="@id/tv_college"/>

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教员上门"
                android:textColor="@color/color_3A3A3A"
                android:layout_toLeftOf="@id/cb_college"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>
            <CheckBox
                android:id="@+id/cb_teacher"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_check_box_green"
                android:layout_toLeftOf="@id/tv_teacher"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课地址"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp" />

            <TextView
                style="@style/setting_title_text"
                android:gravity="left"
                android:text="请选择上课地址" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程服务（可多选）"
            android:textSize="14sp"
            android:textColor="@color/color_3A3A3A"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/white"
            android:paddingLeft="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:visibility="invisible"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:button="@drawable/selector_check_box_green"
                />


            <TextView
                style="@style/setting_title_text_whiteout_right"
                android:gravity="left"
                android:text="首节课不满意，全额退款" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:visibility="invisible"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:button="@drawable/selector_check_box_green"
                />


            <TextView
                style="@style/setting_title_text_whiteout_right"
                android:gravity="left"
                android:text="后续未上课程可退款" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:visibility="invisible"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_red_start" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:button="@drawable/selector_check_box_green"
                />

            <TextView
                style="@style/setting_title_text_whiteout_right"
                android:gravity="left"
                android:text="课程不满意全额退款" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程大纲（选填）"
            android:textSize="14sp"
            android:textColor="@color/color_3A3A3A"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/white"
            android:paddingLeft="18dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="14sp"
                android:textColor="@color/color_3A3A3A"
                android:text="第 1 节课"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高三物理概要"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_3A3A3A"
                android:layout_toRightOf="@id/tv_sort"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@mipmap/icon_delect_class"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_add_class_outline"
            android:text="添加大纲"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_0AA0FE"
            android:textSize="14sp"/>

        <TextView
            android:background="@drawable/select_button_login"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:gravity="center"
            android:text="下一步(2/4)"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_width="325dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</ScrollView>