<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_content_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#EDEDED"/>

        <RadioGroup
            android:id="@+id/main_btngroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/order"
                style="@style/home_navi_radiobutton"
                android:drawableTop="@drawable/selector_order_tab"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"
                android:text="订单"/>

            <RadioButton
                android:id="@+id/manage"
                style="@style/home_navi_radiobutton"
                android:drawableTop="@drawable/selector_managament_tab"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"
                android:text="管理"/>

            <RadioButton
                android:id="@+id/community"
                style="@style/home_navi_radiobutton"
                android:drawableTop="@drawable/selector_community_tab"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"
                android:text="社区"/>

            <RadioButton
                android:id="@+id/workbench"
                style="@style/home_navi_radiobutton"
                android:drawableTop="@drawable/selector_workench_tab"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"
                android:text="工作台"/>


            <RadioButton
                android:id="@+id/hotList"
                style="@style/home_navi_radiobutton"
                android:drawableTop="@drawable/selector_hot_tab"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"
                android:text="热榜"/>

            <RadioButton
                android:id="@+id/mine"
                style="@style/home_navi_radiobutton"
                android:drawableTop="@drawable/selector_personal_tab"
                android:paddingTop="@dimen/qb_px_15"
                android:paddingBottom="@dimen/qb_px_15"
                android:text="我的"/>
        </RadioGroup>
    </LinearLayout>
</FrameLayout>