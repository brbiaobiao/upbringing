<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_ffffff">

    <RelativeLayout
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="机构招募海报"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_certification_students"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:text="学员认证"
            android:textSize="16sp"
            android:textColor="@color/color_3A3A3A"/>

        <TextView
            android:layout_marginTop="44dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:text="未认证"
            android:textSize="12sp"
            android:textColor="@color/color_9A9A9A"/>


        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_save"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:text="去认证"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/shape_dialog_btn_sure"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <View style="@style/setting_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_certification_worker"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:text="教员认证"
            android:textSize="16sp"
            android:textColor="@color/color_3A3A3A"/>

        <TextView
            android:layout_marginTop="44dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:text="未认证"
            android:textSize="12sp"
            android:textColor="@color/color_9A9A9A"/>


        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:text="去认证"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/shape_dialog_btn_sure"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <View style="@style/setting_divider" />



    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <View
            android:layout_marginLeft="116dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="1dp"
            android:background="#bbbbbb"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_7a7a7a"
        android:textSize="14sp"
        android:text="关于认证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentRight="true"
            android:layout_marginRight="116dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="1dp"
            android:background="#bbbbbb"/>

    </RelativeLayout>

    <TextView
        android:text="1.用户如果需要在本平台购买课程，需认证学员。"
        android:textSize="12sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:text="2. 用户如果需要在本平台进行授课，需认证教员或教师。"
        android:textSize="12sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:text="3. 认证教员需要本科及以上学历，认证后自动获得学员身份。"
        android:textSize="12sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:text="4. 认证教师需要具备相应的职业证书，认证后自动获得学员身份。"
        android:textSize="12sp"
        android:textColor="@color/color_7a7a7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>